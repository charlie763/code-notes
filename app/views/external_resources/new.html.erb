<h1 class="mt-4 mb-3">New Resource</h1>
<div class="row justify-content-start">
  <div class="col-md-8">
    <%= form_with model: @external_resource, url: language_external_resources_path(@language), local: true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <%= f.submit "Create Resource", class: "btn-secondary submit-button" %>
    <% end %>
  </div>
</div>
