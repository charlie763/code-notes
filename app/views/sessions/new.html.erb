<div class="row justify-content-center mt-5 mb-4">
  <div class="col-auto">
    <h1>Log In</h1>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-8 col-10">
    <% if flash[:alert] %>
      <div class="field_with_errors">
        <label><%= flash[:alert] %></label>
      </div>
    <% end %>
    <%= form_tag do %>
      <div class="form-group">
        <%= label_tag :username %>
        <%= text_field_tag :username, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, "", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Log In", class:"btn-secondary submit-button" %>
      </div>
    <% end %>
    <div class="row justify-content-center mt-5">
      <%= link_to "Log in via Github", '../auth/github', class: "mx-4" %>
      <%= link_to "Sign Up", new_user_path, class: "mx-4" %>
    </div>
  </div>
</div>
